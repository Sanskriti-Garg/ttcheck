  const isBot = type === 'bot';

  return (
    <div className={`message-row ${isBot ? 'bot' : 'user'}`}>
      {isBot && <FaRobot className="icon" />}
      <div className={`message-bubble ${type}`}>{text}</div>
      {!isBot && <FaRegSmile className="icon" />}
    </div>
  );
}


<Dropdown
        placeholder="Assessment Status"
        fluid
        multiple
        search
        selection
        className="fixed-multi-dropdown"
        value={selected}
        options={assessmentStatusMasterData}
        onChange={(e, data) => {
          dispatch(setAssessmentStatus(data.value));
          validateAssessmentStatus(data.value);
        }}
        id="assessmentstatus"
        name="assessmentstatus"
        aria-describedby="title-error"
        required
        aria-invalid={!!error}
        renderLabel={(item) => {
          // Show only the first selected item with a badge
          if (item.value === selected[0]) {
            const count = selected.length;
            return {
              content: (
                <>
                  {item.text}
                  {count > 1 && (
                    <span
                      style={{
                        marginLeft: "5px",
                        background: "#e0e0e0",
                        borderRadius: "10px",
                        padding: "2px 8px",
                        fontSize: "0.8em"
                      }}
                    >
                      +{count - 1} selected
                    </span>
                  )}
                </>
              )
            };
          }
          return null;
        }}
      />
